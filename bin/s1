#!/usr/bin/env python3

import os
import sys

dir_path = os.getcwd()
path = os.path.split(dir_path)[-1]
if path.startswith("day"):
    try:
        day = int(path[3:])
    except ValueError:
        print("Invalid day number " + path[3:])
        exit(1)
    if len(sys.argv) != 2:
        print("Usage: ./s1 <puzzle-answer>")
        exit(1)
    answer = sys.argv[1]
    os.system(f"aoc submit --day {day} --year {2024} {1} {answer}")
else:
    print("Not in a day directory")
